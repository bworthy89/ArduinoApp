<?xml version="1.0" encoding="utf-8"?>
<!-- Custom styles for the Arduino Configuration App -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Card Style -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Input Card Style (for testing panel) -->
    <Style x:Key="InputCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Active Input Card Style -->
    <Style x:Key="ActiveInputCardStyle" TargetType="Border" BasedOn="{StaticResource InputCardStyle}">
        <Setter Property="BorderBrush" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 7-Segment Display Style -->
    <Style x:Key="SevenSegmentDisplayStyle" TargetType="Border">
        <Setter Property="Background" Value="#111111"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style x:Key="SevenSegmentTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Foreground" Value="#FF0000"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- Status Indicator Colors -->
    <SolidColorBrush x:Key="StatusConnectedBrush" Color="#27ae60"/>
    <SolidColorBrush x:Key="StatusConnectingBrush" Color="#f1c40f"/>
    <SolidColorBrush x:Key="StatusDisconnectedBrush" Color="#95a5a6"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="#e74c3c"/>

    <!-- Wire Colors -->
    <SolidColorBrush x:Key="WireRedBrush" Color="#e74c3c"/>
    <SolidColorBrush x:Key="WireBlackBrush" Color="#333333"/>
    <SolidColorBrush x:Key="WireBlueBrush" Color="#3498db"/>
    <SolidColorBrush x:Key="WireGreenBrush" Color="#27ae60"/>
    <SolidColorBrush x:Key="WireYellowBrush" Color="#f1c40f"/>
    <SolidColorBrush x:Key="WireOrangeBrush" Color="#e67e22"/>
    <SolidColorBrush x:Key="WirePurpleBrush" Color="#9b59b6"/>

    <!-- Keyboard Key Button Style -->
    <Style x:Key="KeyboardKeyStyle" TargetType="Button">
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
    </Style>

    <!-- Modifier Key Style (pressed state) -->
    <Style x:Key="ModifierKeyPressedStyle" TargetType="Button" BasedOn="{StaticResource KeyboardKeyStyle}">
        <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Pin Label Style -->
    <Style x:Key="PinLabelStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- Input Type Icon Templates -->
    <DataTemplate x:Key="ButtonIconTemplate">
        <FontIcon Glyph="&#xE961;" FontSize="24"/>
    </DataTemplate>

    <DataTemplate x:Key="EncoderIconTemplate">
        <FontIcon Glyph="&#xE895;" FontSize="24"/>
    </DataTemplate>

    <DataTemplate x:Key="ToggleSwitchIconTemplate">
        <FontIcon Glyph="&#xE7E8;" FontSize="24"/>
    </DataTemplate>

    <DataTemplate x:Key="DisplayIconTemplate">
        <FontIcon Glyph="&#xE7F4;" FontSize="24"/>
    </DataTemplate>

</ResourceDictionary>
